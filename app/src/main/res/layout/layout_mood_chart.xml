<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingBottom="10dp">


    <HorizontalScrollView
        android:id="@+id/scroll_linechart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="360dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/y_value1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_5"
            app:layout_constraintBottom_toTopOf="@+id/y_value2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/y_value2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_1"
            app:layout_constraintBottom_toTopOf="@+id/y_value3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/y_value1" />


        <ImageView
            android:id="@+id/y_value3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_6"
            app:layout_constraintBottom_toTopOf="@+id/y_value4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/y_value2" />

        <ImageView
            android:id="@+id/y_value4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_4"
            app:layout_constraintBottom_toTopOf="@+id/y_value5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/y_value3" />

        <ImageView
            android:id="@+id/y_value5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_2"
            app:layout_constraintBottom_toTopOf="@+id/y_value6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/y_value4" />

        <ImageView
            android:id="@+id/y_value6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_3"
            app:layout_constraintBottom_toTopOf="@+id/y_value7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/y_value5" />

        <ImageView
            android:id="@+id/y_value7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_7"
            app:layout_constraintBottom_toTopOf="@+id/y_value8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/y_value6" />

        <ImageView
            android:id="@+id/y_value8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bean_type_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/y_value7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>