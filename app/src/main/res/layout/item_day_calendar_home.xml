<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvWeekTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold_700"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="Mon" />

    <LinearLayout
        android:id="@+id/layoutBean"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBeanType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bean_type_default" />

        <TextView
            android:id="@+id/tvBeanDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunito_bold_700"
            android:gravity="center"
            android:textColor="@color/text_color_54"
            android:textSize="14sp"
            tools:text="10" />
    </LinearLayout>

</LinearLayout>