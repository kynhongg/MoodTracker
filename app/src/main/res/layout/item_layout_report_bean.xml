<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/imgTypeBean"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        tools:src="@drawable/ic_bean_type_1" />

    <LinearLayout
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="-12dp"
        android:layout_toEndOf="@id/imgTypeBean"
        android:background="@drawable/circle_number_of_bean">

        <TextView
            android:id="@+id/tvCountBean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_bold_700"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>