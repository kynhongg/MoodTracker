<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_radius_grey_shadow"
    android:paddingHorizontal="16dp"
    android:paddingVertical="14dp">

    <ImageView
        android:id="@+id/radioCheck"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_block_radio_group" />

    <TextView
        android:id="@+id/tvBlockName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/radioCheck"
        android:fontFamily="@font/nunito_semi_bold_600"
        android:gravity="center_vertical|start"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        tools:text="Block 1" />
</RelativeLayout>